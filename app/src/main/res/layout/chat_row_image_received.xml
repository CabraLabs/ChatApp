<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rowMessageSend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/chat_received_bg"
        android:paddingHorizontal="15dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/userAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_goat"
            android:padding="3dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/purple_app"
            app:shapeAppearanceOverlay="@style/RoundedShape50" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chatRowUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="3dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="username" />

            <ImageView
                android:id="@+id/btnChatRowImage"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="3dp"
                android:scaleType="fitCenter"
                android:transitionName="imageSmall" />

            <TextView
                android:id="@+id/chatRowTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingHorizontal="3dp"
                android:textColor="@color/white"
                android:textStyle="italic"
                tools:text="HH:mm aa"
                tools:textSize="9dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>